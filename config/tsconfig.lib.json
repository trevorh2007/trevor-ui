{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "outDir": "../dist/lib",
    "rootDir": "../src"
  },
  "include": ["../src/lib/**/*", "../src/components/**/*"],
  "exclude": [
    "../src/**/*.test.ts",
    "../src/**/*.test.tsx",
    "../src/**/setupTests.ts",
    "../src/**/**.spec.ts",
    "../src/**/*.spec.tsx",
    "../node_modules",
    "../dist"
  ]
}
